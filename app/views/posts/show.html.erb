  <div class="panel-body"><%= @post.body %></div>

</div>
<div id="timestamp">
  Submitted <%= time_ago_in_words(@post.created_at) %> Ago
| <%= link_to 'Edit', edit_post_path(@post) %>
| <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Delete Post?'} %>
</div>


